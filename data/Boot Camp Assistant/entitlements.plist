<!-- Entitlements for Boot Camp Assistant.app -->

<?xml version='1.0' encoding='utf-8'?>
<plist version="1.0">
  <dict>
    <key>com.apple.application-identifier</key>
    <string>com.apple.bootcampassistant</string>
    <key>com.apple.private.AuthorizationServices</key>
    <array>
      <string>system.install.apple-software</string>
      <string>com.apple.SoftwareUpdate.scan</string>
    </array>
    <key>com.apple.private.EnableMSSecBoot</key>
    <true />
    <key>com.apple.private.bootcampassistant</key>
    <true />
    <key>com.apple.private.diskmanagement.make-legacy-bootable</key>
    <true />
    <key>com.apple.private.diskmanagement.set-boot-device</key>
    <true />
    <key>com.apple.private.tcc.allow</key>
    <array>
      <string>kTCCServiceSystemPolicyRemovableVolumes</string>
      <string>kTCCServiceSystemPolicyDesktopFolder</string>
      <string>kTCCServiceSystemPolicyDownloadsFolder</string>
    </array>
  </dict>
</plist>